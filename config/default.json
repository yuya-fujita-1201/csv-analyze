{
  "dataFolders": {
    "input": "./data/input",
    "output": "./data/output"
  },
  "memory": {
    "maxHeapSize": 4096,
    "warningThreshold": 0.8
  },
  "encoding": {
    "defaultInput": "auto",
    "defaultOutput": "utf-8"
  },
  "display": {
    "pageSize": 100,
    "maxColumnsPreview": 20,
    "theme": "auto"
  },
  "export": {
    "csv": {
      "delimiter": ",",
      "quote": "\"",
      "escape": "\"",
      "header": true
    },
    "excel": {
      "sheetName": "Data",
      "autoFilter": true,
      "freezeHeader": true
    }
  },
  "logging": {
    "level": "info",
    "maxFiles": 10,
    "maxSize": "10MB"
  }
}